<h1>Listing articles</h1>
<div id="tag_cloud">
  <% tag_cloud Article.tag_counts, %w[s m l ] do |tag, css_class | %>
  <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
 </div>

<table border="1px" bgcolor="orange">

    <% @articles.each do |article| %>
      
       <h1><%= article.name %><br></h1>
        <%= article.text %><br>
        <%= article.data %><br>
        Tags:<%= raw article.tag_list.map { |t| link_to t, tag_path(t)}.join(',') %><br>
        <%= link_to 'Show', article %>
        <%= link_to 'Edit', edit_article_path(article) %>
        <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %><br>
    <% end %>
</table>
